{
  "name": "commerce-sdk-integration-test",
  "version": "1.4.1-beta.0",
  "description": "Salesforce Commerce Cloud SDK Integration Test",
  "homepage": "https://developer.commercecloud.com/s/",
  "private": true,
  "scripts": {
    "depcheck": "depcheck",
    "lint": "eslint . --ext .ts,.js --quiet --fix",
    "pretest": "npm run lint && npm run depcheck",
    "test": "nyc mocha \"tests/*.test.*\"",
    "bundle:core": "npm pack ../packages/core && mv commerce-apps-core*.tgz commerce-apps-core.tgz",
    "bundle:sdk": "npm pack ../packages/generator && mv commerce-sdk-*.tgz commerce-sdk.tgz",
    "bundle:install": "npm run bundle:core && npm run bundle:sdk && npm install",
    "test:integration": "npm run bundle:install &&  npm run test",
    "test:integration:redis": "bundle:sdk && npm run redis --prefix ../packages/core && npm run test; npm run redis:shutdown --prefix ../packages/core",
    "test:integration:redis:debug": "bundle:sdk && npm run redis --prefix ../packages/core && npm run test; npm run redis:shutdown:debug --prefix ../packages/core"
  },
  "dependencies": {
    "@commerce-apps/core": "file:./commerce-apps-core.tgz",
    "commerce-sdk": "file:./commerce-sdk.tgz"
  },
  "nyc": {
    "all": true,
    "cache": false,
    "include": [
      "node_modules/@commerce-apps/core/dist/**",
      "node_modules/commerce-sdk/dist/**"
    ],
    "excludeNodeModules": false,
    "source-map": false,
    "per-file": true,
    "reporter": [
      "lcov"
    ]
  },
  "mocha": {
    "require": [
      "esm"
    ],
    "colors": true
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "prettier/@typescript-eslint",
      "plugin:prettier/recommended"
    ],
    "plugins": [
      "@typescript-eslint",
      "@typescript-eslint/eslint-plugin",
      "tsdoc",
      "jsdoc",
      "header"
    ],
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module"
    },
    "rules": {
      "jsdoc/require-param-name": "error",
      "jsdoc/require-returns-check": "error",
      "jsdoc/require-returns-description": "error",
      "tsdoc/syntax": "error",
      "@typescript-eslint/interface-name-prefix": [
        "error",
        {
          "prefixWithI": "always"
        }
      ],
      "jsdoc/require-jsdoc": [
        "error",
        {
          "publicOnly": true,
          "require": {
            "ArrowFunctionExpression": true,
            "ClassDeclaration": true,
            "ClassExpression": true,
            "FunctionDeclaration": true,
            "FunctionExpression": true,
            "MethodDefinition": true
          }
        }
      ],
      "header/header": [
        2,
        "block",
        [
          "",
          {
            "pattern": "^ \\* Copyright \\(c\\) \\d{4}, salesforce.com, inc\\.$",
            "template": " * Copyright (c) 2020, salesforce.com, inc."
          },
          " * All rights reserved.",
          " * SPDX-License-Identifier: BSD-3-Clause",
          " * For full license text, see the LICENSE file in the repo root or https://opensource.org/licenses/BSD-3-Clause",
          " "
        ]
      ]
    },
    "overrides": [
      {
        "files": [
          "**/*.js"
        ],
        "rules": {
          "tsdoc/syntax": "off",
          "@typescript-eslint/interface-name-prefix": "off",
          "@typescript-eslint/no-var-requires": "off"
        }
      }
    ]
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^2.30.0",
    "@typescript-eslint/parser": "^2.30.0",
    "eslint-plugin-jsdoc": "^25.4.2",
    "eslint-plugin-tsdoc": "^0.2.4",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "conditional-type-checks": "^1.0.5",
    "depcheck": "^0.9.2",
    "eslint": "^7.0.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-header": "^3.0.0",
    "eslint-plugin-prettier": "^3.1.3",
    "esm": "^3.2.25",
    "jsonwebtoken": "^8.5.1",
    "mocha": "^7.1.2",
    "nyc": "^15.0.1"
  }
}
